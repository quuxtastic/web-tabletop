# module configuration access

fs=require 'fs'

conf=null

exports.load=(filename) ->
  conf=JSON.parse fs.readFileSync filename,'utf8'

exports.get=(confpath) ->
  parts=confpath.split /\./
  cur=conf
  for key in parts
    return null unless cur?
    cur=cur[key]

  return cur

