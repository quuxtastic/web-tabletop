# error handling

util=require 'util'

exports.fatal=(req,res,e) ->
  console.log 'Error processing '+req.method+' request '+req.url+'\n'
  console.log util.inspect e

  res.writeHead 500,'Content-Type':'text/plain'
  res.end 'Internal server error'

