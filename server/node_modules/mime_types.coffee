# mime types list

path=require 'path'

types=
  '.html':'text/html'
  '.css':'text/css'
  '.png':'image/png'
  '.json':'application/json'
  '.js':'application/javascript'

default_type='application/octet-stream'

exports.types=types
exports.get_type_from_file=(filename) ->
  return types[path.extname filename] ? default_type

