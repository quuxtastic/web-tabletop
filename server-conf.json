{
  "listen_addr":"localhost",
  "listen_port":1337,

  "grab_tty":true,

  "modules":{
    "request_handler":{
      "default_request":"static_file_req",
      "requests":{
        "/api/module/(\\w+)":"client_module:handle_module",
        "/api/client_init":"client_module:handle_mod_init",

        "/api/login":"auth:handle_login",
        "/api/logout":"auth:handle_logout"
      }
    },

    "static_file_req":{
      "forwards":{
        "/":"index.html"
      }
    },

    "client_module":{
      "init":[]
    },

    "auth":{
      "users":{
        "GM":{
          "admin":true,
          "password":"password"
        }
      }
    }
  }
}

