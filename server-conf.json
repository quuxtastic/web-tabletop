{
  "listen_addr":"localhost",
  "listen_port":1337,

  "grab_tty":true,
  "log_path":"./var/log",

  "plugin_root":"./server/plugins",
  "plugins":{
    "request_handler":{
      "handler_root":"./server/plugins",
      "default_request":"static",
      "requests":{
        "/api/module/(\\w+)":"client_module:handle_module",
        "/api/client_init":"client_module:handle_mod_init",

        "/api/login":"auth:handle_login",
        "/api/logout":"auth:handle_logout"
      }
    },

    "static":{
      "content_root":"./static_content",
      "forwards":{
        "/":"index.html"
      }
    },

    "client_module":{
      "module_root":"./client",
      "output_path":"./var/bin",
      "init":["auth"]
    },

    "auth":{
      "users":{
        "GM":{
          "admin":true,
          "password":"password"
        }
      }
    }
  }
}

